@page
@model MyAppCQRSPattern.UI.Pages.Admin.Genders.IndexModel
@{
    ViewData["Title"] = "List Of Genders";
}
<style>
    th {
        color: #4caf50;
        font-weight: bold;
    }
</style>


<div class="border backgroundWhite container shadow" style="margin-top:70px;">

    <div class="row">
        <div class="col-12">
            <h4 class="text-success">
                <i class="fas fa-users"></i>&nbsp;Gender List
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="/Admin/Genders/Upsert" class="btn btn-success"><i class="fas fa-plus-circle">&nbsp;Create new gender record</i></a>
        </div>
    </div>

    <br /><br />
    <div class="table-responsive">
        <table id="DT_load" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Sex</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/genders.js"></script>
}
